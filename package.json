{
  "name": "goblin-bot",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "npx vite-node --watch src/index.ts",
    "build": "tsc --noEmit && vite build --ssr src/index.ts",
    "start": "node dist/index.js",
    "deploy": "NODE_ENV=production npx vite-node --config vite.deploy.config.ts scripts/deploy-commands.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "npm run eslint-check && npm run prettier-check",
    "lint-fix": "npm run eslint-fix && npm run prettier-fix",
    "eslint-check": "eslint .",
    "eslint-fix": "npm run eslint-check -- --fix",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write ."
  },
  "dependencies": {
    "bufferutil": "^4.0.9",
    "discord.js": "^14.22.1",
    "dotenv": "^16.6.1",
    "pino": "^9.9.0",
    "zlib-sync": "^0.1.10",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "jiti": "^2.5.1",
    "pino-pretty": "^13.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.17.0",
    "vite": "^7.1.3",
    "vite-node": "^3.2.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
